{
	"$schema": "http://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"build": {
			"inputs": ["src/**", "scripts/**", "types/**", "*.mjs", "*.js", "*.json"],
			"outputs": ["dist/**", "bootstrap.js", "worker-metafiles/**"],
			"env": ["CI_OS", "NODE_EXTRA_CA_CERTS"]
		},
		"test:ci": {
			"inputs": ["test/**"],
			"dependsOn": ["build"],
			"env": ["CI_OS", "NODE_EXTRA_CA_CERTS"]
		}
	}
}
